<article class="game">
  <div class="title">
    <a href="{{game.game_url}}" target="_blank">{{game.title}}</a>
    <span>({{game.game_url}})</span>
  </div>
  <div class="meta">
    {{game.vote_count}} point(s) by {{game.user.username}} on
    {{game.created_at}}
    |
    <a href="/game/{{game.id}}">{{game.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each game.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}

