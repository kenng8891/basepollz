<div class="single-game"> 
<article class="game">
   <div class="title">
      {{#if game.team_isWinner_home }}
      <div class="game-card-win">
      The {{game.team_name_home}} won!
         <img src =  {{game.team_home_logo}}>
         </div>
         <br>
         <div class="game-card-lose">
      The {{game.team_name_away}} lost.
      <img src = {{game.team_away_logo}}>
      </div>
      {{else if game.team_isWinner_away}}
      <div class="game-card-win">
      The {{game.team_name_away}} won!
          <img src = {{game.team_away_logo}}>
          </div>
          <div class="game-card-lose">
      The {{game.team_name_home}} lost. <img src =  {{game.team_home_logo}}>
      </div>
      {{else}}
         <h3>{{game.team_name_home}} <img src = {{game.team_home_logo}}> <br> <span class="vs-text">VS.</span> <br> {{game.team_name_away}} <img src = {{game.team_away_logo}}> </h3>
      {{/if}}


            </div>
  <div class="meta">
    <span class='date'> Game date: {{format_date game.game_date}}</span>
<br>
{{game.vote_count}} point(s) by {{game.user.username}} on
    {{game.created_at}}
    |            
    <a href="/game/{{game.id}}">{{game.comments.length}} comment(s)</a>
  </div>


{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">Vote for the {{game.team_name_home}}</button>
    <button type="button" class="upvote-btn">Vote for the {{game.team_name_away}}</button>
  </div>
</form>
{{/if}}
</article>

